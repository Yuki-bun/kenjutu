{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "kenjutu",
  "version": "0.1.0",
  "identifier": "kenjutu",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "kenjutu",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline'; connect-src ipc: http://ipc.localhost https://api.github.com; img-src 'self' https: asset: https://asset.localhost; font-src 'self' data:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "typegen": {
      "excludePatterns": null,
      "includePatterns": null,
      "includePrivate": false,
      "outputPath": "./src/generated",
      "projectPath": ".",
      "typeMappings": null,
      "validationLibrary": "none",
      "verbose": false,
      "visualizeDeps": false
    },
    "store": null
  }
}
